{
  "name": "githunt",
  "version": "1.0.0",
  "description": "Example app for Apollo",
  "main": "index.js",
  "scripts": {
    "start-app-client": "webpack-dev-server -d --hot --inline --no-info --port 3020",
    "start-app-server": "nodemon ui/server.js --watch ui --exec babel-node",
    "api": "nodemon api/index.js --watch api --exec babel-node",
    "start": "concurrently \"npm run api\" \"npm run start-app-client\" \"npm run start-app-server\"",
    "lint": "eslint ui",
    "build": "webpack -p --progress --config ./webpack.production.config.js",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollostack/GitHunt.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/apollostack/GitHunt/issues"
  },
  "keywords": [
    "react",
    "hapi",
    "graphql",
    "subscriptions"
  ],
  "homepage": "https://github.com/apollostack/GitHunt#readme",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.9.0",
    "concurrently": "^3.0.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "html-webpack-plugin": "^2.22.0",
    "nodemon": "^1.9.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "apollo-client": "^1.4.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "classnames": "^2.2.5",
    "core-decorators": "^0.15.0",
    "express": "^4.14.0",
    "good": "^7.1.0",
    "good-console": "^6.2.0",
    "good-squeeze": "^5.0.1",
    "graphql": "^0.10.3",
    "graphql-anywhere": "^1.0.0",
    "graphql-server-hapi": "^1.0.0",
    "graphql-subscriptions": "^0.4.4",
    "graphql-tag": "^2.0.0",
    "graphql-tools": "^1.0.0",
    "hapi": "^16.0.1",
    "http-proxy-middleware": "^0.17.1",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "lodash": "^4.17.2",
    "node-emoji": "^1.3.0",
    "react": "^15.1.0",
    "react-addons-update": "^15.2.1",
    "react-apollo": "^1.4.3",
    "react-dom": "^15.1.0",
    "react-ga": "^2.1.0",
    "react-notification-system": "^0.2.11",
    "react-router": "^3.0.0",
    "react-timeago": "^3.0.0",
    "redux": "^3.5.2",
    "subscriptions-transport-ws": "^0.7.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "mocha": true
    },
    "extends": "airbnb",
    "globals": {
      "ga": true
    },
    "rules": {
      "camelcase": 0,
      "react/jsx-filename-extension": 0,
      "react/no-unused-prop-types": [
        2,
        {
          "skipShapeProps": true
        }
      ]
    }
  }
}
